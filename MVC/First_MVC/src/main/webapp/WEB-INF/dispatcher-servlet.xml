<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="viewController" class="com.fmvc.controller.ViewWelcomeController"/>
	
	<bean id="suhm" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
		<property name="mappings">
			<props>
				<prop key="/welcome.htm">viewController</prop>
			</props>
		</property>
	</bean>
	
	<bean id="vr" class="org.springframework.web.servlet.view.BeanNameViewResolver"/>
	
	<bean id="welcome" class="org.springframework.web.servlet.view.JstlView">
		<property name="url" value="/WEB-INF/jsp/welcome.jsp"/>
	</bean>
</beans>